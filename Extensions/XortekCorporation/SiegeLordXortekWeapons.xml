    <EffectType UNID="&efSiegeLordXortekPlasmaFire;"
            instance=           "owner"
            >
        <Effect>
            <Ray    style=          "smooth"
                    shape=          "tapered"
                    primaryColor=   "#FFBE7D"
                    secondaryColor= "#ff7f00"
                    xformRotation=  "180"
                    
                    lifetime=       "3"
                    animate=        "fade"
                    >
                <Events>
                    <GetParameters>
                        (block (damageHP)
                            (setq damageHP (@ gData 'damageHP))

